{% extends 'base.html.twig' %}

{% block title %}User Details{% endblock %}

{% block body %}
<style>
    .back-arrow {
      font-size: 1.5rem;
      color: black !important;
    }
</style>
  <div class="">
    <a class="back-arrow text-decoration-none text-light m-2 p-2 fw-bold" href="{{ path('app_user_index') }}">
      <i class="bi bi-arrow-left"></i>
      Back</a>
  </div>

  <div class="container">
    <h1 class="text-center">User Details</h1>
    <div class="w-75 mx-auto border bg-light rounded m-3 p-5">
        <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ user.id }}</td>
            </tr>
            <tr>
                <th>Email</th>
                <td>{{ user.email }}</td>
            </tr>
            <tr>
                <th>Roles</th>
                <td>{{ user.roles ? user.roles|json_encode : '' }}</td>
            </tr>
            <tr>
                <th>Password</th>
                <td>{{ user.password }}</td>
            </tr>
            <tr>
                <th>First_name</th>
                <td>{{ user.firstName }}</td>
            </tr>
            <tr>
                <th>Last_name</th>
                <td>{{ user.lastName }}</td>
            </tr>
            <tr>
                <th>Address</th>
                <td>{{ user.address }}</td>
            </tr>
            <tr>
                <th>Passport</th>
                <td>{{ user.passport }}</td>
            </tr>
            <tr>
                <th>Phone</th>
                <td>{{ user.phone }}</td>
            </tr>
            <tr>
            </tr>
            {# <tr>
                <th>Image</th>
                <td>{{ user.image }}</td>
            </tr> #}
        </tbody>
    </table>
    <div class="text-center">
        <a class="btn btn btn-warning" href="{{ path('app_user_edit', {'id': user.id}) }}">Edit</a>
    </div>
    <div class="text-center m-3">
        {{ include('user/_delete_form.html.twig') }}
    </div>

    </div>

  </div>
    
{% endblock %}
