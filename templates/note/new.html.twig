{% extends 'base.html.twig' %}

{% block title %}Create Diary Note{% endblock %}

{% block body %}
<style>
    body {
      background: var(--main-bg-color);
      color: white;
    }
    .back-arrow {
      font-size: 1.5rem;
    }
    .form-container {
      border-style: solid;
      border-color: var(--accent-color-orange) !important;
    }
</style>

  <div class="">
    <a class="back-arrow text-decoration-none text-light m-2 p-2 fw-bold" href="/dashboard">
      <i class="bi bi-arrow-left"></i>
      Back</a>
  </div>

  <div class="form-container container text-center w-50 border rounded p-5 m-5 mx-auto">
    <h1 class="divider-heading my-3">Your Journal Diary</h1>
  {{ form_start(form) }}
  <div class="row mb-3">
    {{ form_label(form.title, "Title", {'label_attr': {'class': 'col-sm-3 col-form-label'}}) }}
    {{ form_widget(form.title, {'attr': {'class': 'col-sm-9 border-dark rounded border-1'}}) }}
  </div>
  <div class="row mb-3">
    {{ form_label(form.content, "Content", {'label_attr': {'class': 'col-sm-3 col-form-label'}}) }}
    {{ form_widget(form.content, {'attr': {'class': 'col-sm-9 border-dark rounded border-1'}}) }}
  </div>
  <div class="row mb-3">
    {{ form_label(form.date, "Date", {'label_attr': {'class': 'col-sm-3 col-form-label'}}) }}
    {{ form_widget(form.date, {'attr': {'class': 'col-sm-9 border-dark rounded border-1'}}) }}
  </div>
  <div class="row mb-3">
    {{ form_label(form.likes, "Rate (1-100)", {'label_attr': {'class': 'col-sm-3 col-form-label'}}) }}
    {{ form_widget(form.likes, {'attr': {'class': 'col-sm-9 border-dark rounded border-1'}}) }}
  </div>
  <div class="row mb-3">
    {{ form_label(form.image, "Picture", {'label_attr': {'class': 'col-sm-3 col-form-label'}}) }}
    {{ form_widget(form.image, {'attr': {'class': 'col-sm-9 border-dark rounded border-1'}}) }}
  </div>
  {{ form_widget(form.save, { 'label': 'Upload' }) }}
    {{ form_end(form, { 'render_rest': false}) }}
  </div>

{% endblock %}
