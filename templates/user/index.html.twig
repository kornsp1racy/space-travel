{% extends 'base.html.twig' %}

{% block title %}Manage Users{% endblock %}

{% block body %}
<style>
    .back-arrow {
      font-size: 1.5rem;
      color: black !important;
    }
</style>
  <div class="d-flex justify-content-between mx-3">
    <a class="back-arrow text-decoration-none text-light fw-bold" href="/dashboard">
      <i class="bi bi-arrow-left"></i>
      Back</a>
      <a class="btn btn-success" href="{{ path('app_user_new') }}"><i class="bi bi-plus-circle-fill"></i> Create User</a>
  </div>

<div class="container">
    <h1 class="text-center">Manage Users</h1>

    <table class="table table-striped table-light my-3">
        <thead>
            <tr>
                <th scope="col">Id</th>
                <th scope="col">Email</th>
                <th scope="col">Roles</th>
                <th scope="col">First_name</th>
                <th scope="col">Last_name</th>
                <th scope="col">Passport</th>
                <th scope="col">Phone</th>
                {# <th scope="col">Image</th> #}
                <th scope="col">actions</th>
            </tr>
        </thead>
        <tbody>
        {% for user in users %}
            <tr>
                <td scope="row">{{ user.id }}</td>
                <td>{{ user.email }}</td>
                <td>{{ user.roles ? user.roles|json_encode : '' }}</td>
                <td>{{ user.firstName }}</td>
                <td>{{ user.lastName }}</td>
                <td>{{ user.passport }}</td>
                <td>{{ user.phone }}</td>
                {# <td>{{ user.image }}</td> #}
                <td>
                    <a class="btn btn-sm btn-primary" href="{{ path('app_user_show', {'id': user.id}) }}">Details</a>
                    <a class="btn btn-sm btn-warning" href="{{ path('app_user_edit', {'id': user.id}) }}">Edit</a>
                </td>
            </tr>
        {% else %}
            <tr>w
                <td colspan="12">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

</div>

{% endblock %}
